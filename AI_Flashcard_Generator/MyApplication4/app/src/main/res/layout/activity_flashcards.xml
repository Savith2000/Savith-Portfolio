<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:andriod="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/popbold"
        android:text="Flashcard Generator"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50dp" />

    <TextView
        android:id="@+id/subtitle_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_text"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:text="Create flashcards from your whiteboard images and notes"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:fontFamily="@font/popping_light" />


    <Button
        android:id="@+id/btn_import_image"
        android:layout_width="147dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/subtitle_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="243dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="360dp"
        android:backgroundTint="@color/colorPrimary"
        android:text="Upload Image"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:translationY="-20dp" />

    <Button
        android:id="@+id/camera_button"
        android:layout_width="148dp"

        android:layout_height="69dp"
        android:layout_below="@+id/subtitle_text"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="359dp"
        android:backgroundTint="@color/colorPrimary"

        android:text="Photo"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:translationY="-20dp" />

    <Button
        android:id="@+id/imageButton"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/title_text"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-59dp"
        android:layout_marginTop="-22dp"
        android:layout_marginEnd="283dp"
        android:background="@android:color/transparent"
        android:text="back"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/iv_selected_image"
        android:layout_width="276dp"
        android:layout_height="210dp"
        android:layout_alignBottom="@+id/btn_import_image"
        android:layout_marginEnd="-123dp"
        android:layout_marginBottom="-296dp"
        android:layout_toStartOf="@+id/camera_button"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/btn_generate_flashcards"
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:layout_alignBottom="@+id/iv_selected_image"
        android:layout_marginBottom="-64dp"
        android:text="Generate Flash Cards" />


</RelativeLayout>
